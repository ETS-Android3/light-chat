<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="net.minecrell.terminalconsole,net.minecrell.terminalconsole.util">
    <properties>
        <property name="LOG_DIR">logs</property>
    </properties>

    <Appenders>
        <TerminalConsole name="Console">
            <PatternLayout pattern="[%d{HH:mm:ss} %level]: %msg%n"/>
        </TerminalConsole>
        <Async name="Async">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="LogFile"/>
        </Async>
        <RollingFile name="LogFile" fileName="${LOG_DIR}/latest.log" filePattern="${LOG_DIR}/%d{MMM-dd-yyyy.HH-mm-ss}.%i.log">
            <PatternLayout>
                <pattern>[%d{HH:mm:ss} %level]: %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy max="5" />
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger level="OFF" name="io.netty"/>
        <Root level="all">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="LogFile"/>
        </Root>
    </Loggers>


</Configuration>