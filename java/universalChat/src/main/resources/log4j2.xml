<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="net.minecrell.terminalconsole,net.minecrell.terminalconsole.util">
    <Appenders>
        <TerminalConsole name="Console">
<!--            <PatternLayout pattern="[%d{HH:mm:ss} %level]: %msg%n"/>-->
            <PatternLayout noConsoleNoAnsi="true" pattern="%highlight{[%d{HH:mm:ss} %level]: %minecraftFormatting{%msg}%n%xEx}"/>
        </TerminalConsole>
        <Async name="Async">
            <AppenderRef ref="Console"/>
        </Async>
    </Appenders>
    <Loggers>
        <Logger level="OFF" name="io.netty"/>
        <Root level="all">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>


</Configuration>